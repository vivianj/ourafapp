<% provide(:title, 'Sign up') %>
<h1>注册</h1>

<div class="row">
  <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 top20"> 
    <div class="panel panel-info" >
      <div class="panel-heading">
          <div class="panel-title">注册</div>
      </div>
      <div class="panel-body" >
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= f.label :name, "名字" %>
          <%= f.text_field :name, class: "form-control" %>   

          <%= f.label :email, "邮箱 （登录时的用户名）" %>
          <%= f.text_field :email, class: "form-control" %>

          <%= f.label :password, "密码" %>
          <%= f.password_field :password, class: "form-control" %>

          <%= f.label :password_confirmation, "再次确认密码" %>
          <%= f.password_field :password_confirmation, class: "form-control bottom10" %>
          
          <%= f.submit "注册帐号", class: "btn btn-large btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>